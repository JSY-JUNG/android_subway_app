<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/btn_rounded_white.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상: 하얀색 -->
    <solid android:color="#FFFFFF"/>

    <!-- 테두리 설정 (선택사항: 테두리 색상 추가 가능) -->
    <stroke android:color="#D3D3D3" android:width="1dp"/>

    <!-- 둥근 모서리 (모서리 반경 설정, 반지름을 버튼 크기와 동일하게 설정) -->
    <corners android:radius="40dp"/> <!-- 버튼 크기의 절반 값으로 설정 -->

    <!-- 크기 지정 (패딩 추가 가능) -->
    <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
</shape>