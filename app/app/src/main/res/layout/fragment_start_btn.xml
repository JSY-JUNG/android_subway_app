<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/lineBackground"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:gravity="center">

        <!-- 출발역 텍스트 -->
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="2"
            android:background="@drawable/detail_text1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:textColor="#000000"
            android:gravity="center"/>

        <!-- 출발역 이름 표시 -->
        <TextView
            android:id="@+id/startStationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발역"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <!-- 화살표 이미지 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_double_arrow_right_20"
            android:layout_gravity="center" />

        <!-- 화살표 이미지 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_double_arrow_right_20"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"/>

        <!-- 도착역 이름 표시 -->
        <TextView
            android:id="@+id/endStationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="도착역"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <!-- 출발역 다음 정거장 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="전포"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방향,"
                android:textColor="#B3B0B0"
                android:layout_marginLeft="5sp"/>
            <!-- 도착역 종점 정거장행 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장산행"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="열차 탑승"
                android:textColor="#B3B0B0"
                android:layout_marginLeft="5sp"/>
        </LinearLayout>
        <!-- 방향인지 기준을 잘 모르겠음 / 몇분 후 -> 도착 변경될까? -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="장산"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도착"
                android:layout_marginLeft="10dp"
                android:textColor="#546AFA"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장산"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5분 후"
                android:layout_marginLeft="10dp"
                android:textColor="#546AFA"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/detail_btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:text="버스"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/detail_btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#000000"
            android:layout_marginHorizontal="20dp"
            android:text="출구정보"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/detail_btn2"
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:text="역 상세"/>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/detail_btn2"
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:text="시간표"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="5dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_wc_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#6F6D6D"
            android:text="화장실 외부"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_west_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#6F6D6D"
            android:text="내리는문 왼쪽"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_sync_alt_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="#6F6D6D"
            android:text="횡단 가능"/>
    </LinearLayout>



</LinearLayout>

