<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 전체 페이지를 스크롤 가능하게 하기 위해 ScrollView로 감싸기 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/toolbar_layout" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 역 이름 호선 띠 -->
                <GridLayout
                    android:id="@+id/line_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/lineColor_1"
                    android:columnCount="5">

                    <TextView
                        android:id="@+id/tv_left_lt"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:text="&lt;"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="다대포해수욕장"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="8dp"
                        android:background="@drawable/btn_station_name"
                        android:gravity="center"
                        android:text="서면역"
                        android:textColor="@color/lineColor_1" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="부산역"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_right_gt"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_rowSpan="1"
                        android:layout_columnWeight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6dp"
                        android:text="&gt;"
                        android:textColor="#FFFFFF" />
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:columnCount="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="6dp"
                            android:orientation="vertical">
                            <!-- 회색 큰 제목 -->
                            <TextView
                                android:id="@+id/down_title_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:gravity="start"
                                android:text=""
                                android:textColor="#808080" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/down_title_text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/down_time_text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/down_title_text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/down_time_text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/down_title_text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/down_time_text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="120dp"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="0"
                            android:layout_margin="10dp"
                            android:background="#e2e2e2" />

                        <!-- 오른쪽 데이터 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="6dp"
                            android:orientation="vertical">
                            <!-- 회색 큰 제목 -->
                            <TextView
                                android:id="@+id/up_title_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:gravity="start"
                                android:text=""
                                android:textColor="#808080" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/up_title_text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/up_time_text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/up_title_text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/up_time_text2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/up_title_text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/up_time_text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="start"
                                    android:text=""
                                    android:textColor="#59b9ea" />
                            </LinearLayout>
                        </LinearLayout>
                    </GridLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#e2e2e2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="시설 정보"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:columnCount="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_door"
                            android:paddingLeft="8dp"
                            android:drawableStart="@drawable/rightarrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_toilet"
                            android:paddingLeft="8dp"
                            android:drawableStart="@drawable/toilet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_across"
                            android:paddingLeft="8dp"
                            android:drawableStart="@drawable/across"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_flatform"
                            android:paddingLeft="8dp"
                            android:drawableStart="@drawable/flatform"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="" />

                        <TextView
                            android:id="@+id/tv_storage"
                            android:paddingLeft="8dp"
                            android:drawableLeft="@drawable/box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="" />
                    </GridLayout>

                    <TextView
                        android:id="@+id/tv_util"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/etc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#e2e2e2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="역 전체 시간표"
                        android:layout_gravity="end"
                        android:id="@+id/btn_station_time_table"
                        android:textColor="#59b9ea"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="주소 및 전화번호"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소" />

                        <TextView
                            android:id="@+id/tv_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화" />

                        <TextView
                            android:id="@+id/tv_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text=""
                            android:textColor="#59b9ea" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_marginTop="10dp"
                android:background="#e2e2e2" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>